SELECT

pd.name,

pd.age,

pd.sex,

bmi.weight,

bmi.height,

bmi.bmi,

bmr.bmr,

br.hemoglobin_level,

br.rbc_count,

wi.water_intake

FROM

personal_details pd

INNER JOIN

bmi ON pd.name = bmi.name

INNER JOIN

bmr ON pd.name = bmr.name

INNER JOIN

blood_report br ON pd.name

br.name

INNER JOIN

water_intake wi ON pd.name wi.name;





from datetime import datetime
import time
for i in range(10):
	x = datetime.now()
	time.sleep(1)
	print(x)

from datetime import datetime
def time():
	x = datetime.now()
	tm=x.strftime("%X")
	return tm

def date():
	x = datetime.now()
	dt=x.strftime("%x")
	return dt
print(time(),date())
### chatbot wit datetime ###


from datetime import datetime
def time():
	x = datetime.now()
	tm=x.strftime("%X")
	return tm

def date():
	x = datetime.now()
	dt=x.strftime("%x")
	return dt


while True:
	text=input("Enter Text: ")
	text=text.lower()
	if("hello" in text):
		print("Hello! How are you")
	elif("good morning" in text):
		print("Good Morning! Have a nice day!!")
	elif("time" in text):
		print("Time:", time())
	elif("date" in text):
		print("Date:", date())
	elif("goodbye" in text):
		print("Good Bye!!")
		break
	else:
		print("Unable to understand! Still Learning")


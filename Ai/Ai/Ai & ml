import matplotlib.pyplot as plt
marks = [23,34,21,49,42]
subject = ["EVS","Hindi","English","Maths","SST"]
plt.bar(subject,marks)
plt.title("Semester marks")
plt.xlabel("Subject")
plt.ylabel("Marks")
plt.show()

import matplotlib.pyplot as plt
marks = [23,34,21,49,42]
subject = ["EVS","Hindi","English","Maths","SST"]
color=["Red","Green","Blue","pink","black"]
plt.bar(subject,marks,color=color)
plt.title("Semester marks")
plt.xlabel("Subject")
plt.ylabel("Marks")
plt.show()




